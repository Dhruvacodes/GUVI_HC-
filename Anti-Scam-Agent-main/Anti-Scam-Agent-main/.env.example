# =============================================================================
# Anti-Scam Sentinel - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# Required: Google Gemini API Key for LLM responses
# Get your key at: https://aistudio.google.com/
GOOGLE_API_KEY=your_gemini_api_key_here

# Optional: Anthropic API for fallback LLM
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional: API Key for authenticating requests to this server
# If set, clients must include X-API-Key header with this value
# Leave empty or remove to allow unauthenticated requests
API_KEY=

# Optional: Redis for persistent session storage
# If not set, sessions are stored in-memory (lost on restart)
REDIS_URL=redis://localhost:6379

# Session TTL in seconds (default: 1 hour)
SESSION_TTL=3600

# Optional: Enable debug mode
DEBUG=false
